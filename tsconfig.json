{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",

    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/components/*"],
      "Pages/*": ["src/pages/*"],
      "Models/*": ["src/models/*"],
      "Actions/*": ["src/store/actions/*"],
      "Reducers/*": ["src/store/reducers/*"],
      "Static/*": ["static/*"],
      "Constants": ["src/utils/constants.ts"],
      "Interfaces": ["src/utils/interfaces.ts"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
